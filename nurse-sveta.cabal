cabal-version:      2.4
name:               nurse-sveta
version:            0.1.0.0
synopsis:           Dr. Mario prescribes the pills, but Nurse Sveta is the one who administers them
-- description:
license:            BSD-3-Clause
author:             Daniel Wagner
maintainer:         me@dmwit.com

copyright:          2022 Daniel Wagner
category:           AI
extra-source-files: CHANGELOG.md

common shared
    build-depends:        base ^>=4.14.1.0
                        , gi-gtk ^>=4.0
                        , maryodel ^>=0.1
                        , text ^>=1.2
                        , unordered-containers ^>=0.2
    default-language:   Haskell2010
    default-extensions:   FlexibleInstances
                        , GADTs
                        , LambdaCase
                        , MultiParamTypeClasses
                        , OverloadedLabels
                        , OverloadedStrings
                        , UndecidableInstances
                        , ViewPatterns
    ghc-options:        -Wno-tabs -O2

common executable
    import:             shared
    hs-source-dirs:     bin
    build-depends:      nurse-sveta
    ghc-options:        -threaded -rtsopts

library
    import:             shared
    hs-source-dirs:     src
    exposed-modules:    Dr.Mario.Widget
    build-depends:        gi-cairo-connector ^>=0.1
                        , gi-cairo-render ^>=0.1
                        , tomcats ^>=0.1

executable pathfinding-demo
    import:             executable
    main-is:            pathfinding-demo.hs

executable nurse-sveta
    import:             executable
    main-is:            nurse-sveta.hs
    build-depends:        gi-glib ^>=2.0
                        , mwc-random ^>=0.15
